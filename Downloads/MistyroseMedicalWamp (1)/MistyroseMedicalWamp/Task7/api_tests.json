
{
  "reviews_api_tests": {
    "base_url": "http://localhost:3000",
    "endpoints": [
      {
        "name": "General Analytics",
        "method": "GET",
        "url": "/reviews/analytics/general/?days=30",
        "requires_auth": true
      },
      {
        "name": "Search Reviews",
        "method": "GET",
        "url": "/reviews/analytics/search/?keywords=ممتاز",
        "requires_auth": false
      },
      {
        "name": "Product Analytics",
        "method": "GET",
        "url": "/products/1/analytics/?days=30",
        "requires_auth": false
      },
      {
        "name": "Like Review",
        "method": "POST",
        "url": "/reviews/1/interact/",
        "requires_auth": true,
        "body": {"type": "like"}
      },
      {
        "name": "Review Stats",
        "method": "GET",
        "url": "/reviews/1/stats/",
        "requires_auth": false
      },
      {
        "name": "Product Reviews",
        "method": "GET",
        "url": "/reviews/product/1/",
        "requires_auth": false
      }
    ]
  },
  "sorting_filtering_tests": {
    "base_url": "http://localhost:3000",
    "description": "اختبارات الترتيب والتصفية للمراجعات",
    "sorting_tests": [
      {
        "name": "الترتيب حسب الأحدث (افتراضي)",
        "method": "GET",
        "url": "/api/reviews/product/1/",
        "requires_auth": false,
        "description": "عرض المراجعات مرتبة حسب الأحدث"
      },
      {
        "name": "الترتيب حسب أعلى تقييم",
        "method": "GET",
        "url": "/api/reviews/product/1/?ordering=-rating",
        "requires_auth": false,
        "description": "عرض المراجعات مرتبة حسب أعلى تقييم"
      },
      {
        "name": "الترتيب حسب أقل تقييم",
        "method": "GET",
        "url": "/api/reviews/product/1/?ordering=rating",
        "requires_auth": false,
        "description": "عرض المراجعات مرتبة حسب أقل تقييم"
      },
      {
        "name": "الترتيب حسب الأكثر تفاعلاً",
        "method": "GET",
        "url": "/api/reviews/product/1/?ordering=-interaction_score",
        "requires_auth": false,
        "description": "عرض المراجعات مرتبة حسب نقاط التفاعل"
      },
      {
        "name": "الترتيب حسب الأقدم",
        "method": "GET",
        "url": "/api/reviews/product/1/?ordering=created_at",
        "requires_auth": false,
        "description": "عرض المراجعات مرتبة حسب الأقدم"
      }
    ],
    "filtering_tests": [
      {
        "name": "تصفية مراجعات 5 نجوم فقط",
        "method": "GET",
        "url": "/api/reviews/product/1/?stars=5",
        "requires_auth": false,
        "description": "عرض المراجعات ذات 5 نجوم فقط"
      },
      {
        "name": "تصفية مراجعات 4 نجوم فقط",
        "method": "GET",
        "url": "/api/reviews/product/1/?stars=4",
        "requires_auth": false,
        "description": "عرض المراجعات ذات 4 نجوم فقط"
      },
      {
        "name": "تصفية مراجعات 3 نجوم فقط",
        "method": "GET",
        "url": "/api/reviews/product/1/?stars=3",
        "requires_auth": false,
        "description": "عرض المراجعات ذات 3 نجوم فقط"
      },
      {
        "name": "تصفية مراجعات 2 نجوم فقط",
        "method": "GET",
        "url": "/api/reviews/product/1/?stars=2",
        "requires_auth": false,
        "description": "عرض المراجعات ذات 2 نجوم فقط"
      },
      {
        "name": "تصفية مراجعات 1 نجمة فقط",
        "method": "GET",
        "url": "/api/reviews/product/1/?stars=1",
        "requires_auth": false,
        "description": "عرض المراجعات ذات 1 نجمة فقط"
      }
    ],
    "combined_tests": [
      {
        "name": "مراجعات 5 نجوم مرتبة حسب الأكثر تفاعلاً",
        "method": "GET",
        "url": "/api/reviews/product/1/?stars=5&ordering=-interaction_score",
        "requires_auth": false,
        "description": "دمج التصفية والترتيب معاً"
      },
      {
        "name": "مراجعات 4 نجوم مرتبة حسب الأحدث",
        "method": "GET",
        "url": "/api/reviews/product/1/?stars=4&ordering=-created_at",
        "requires_auth": false,
        "description": "مراجعات 4 نجوم مرتبة حسب الأحدث"
      },
      {
        "name": "مراجعات 3 نجوم مرتبة حسب أعلى تقييم",
        "method": "GET",
        "url": "/api/reviews/product/1/?stars=3&ordering=-rating",
        "requires_auth": false,
        "description": "مراجعات 3 نجوم مرتبة حسب التقييم"
      }
    ],
    "general_reviews_tests": [
      {
        "name": "جميع المراجعات - الأحدث",
        "method": "GET",
        "url": "/api/reviews/?ordering=-created_at",
        "requires_auth": true,
        "description": "جميع المراجعات مرتبة حسب الأحدث"
      },
      {
        "name": "جميع المراجعات - أعلى تقييم",
        "method": "GET",
        "url": "/api/reviews/?ordering=-rating",
        "requires_auth": true,
        "description": "جميع المراجعات مرتبة حسب أعلى تقييم"
      },
      {
        "name": "جميع المراجعات - 5 نجوم فقط",
        "method": "GET",
        "url": "/api/reviews/?rating=5",
        "requires_auth": true,
        "description": "جميع المراجعات ذات 5 نجوم"
      }
    ]
  }
}
